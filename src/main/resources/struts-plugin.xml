<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
  <constant name="struts.devMode" value="false" />
  <constant name="struts.enable.SlashesInActionNames" value="true" />
  <constant name="struts.ognl.allowStaticMethodAccess" value="false" />
  <constant name="struts.enable.DynamicMethodInvocation" value="false" />
  <constant name="struts.allowed.action.names" value="[a-zA-Z0-9._!/\\-\\:]*" />
  <constant name="brick.result.name" value="success" />
  <constant name="brick.result.suffix" value="jsp" />

  <package name="brick-default" extends="json-default">
    <result-types>
      <result-type name="result" class="net.isger.brick.struts.BrickResult" default="true" />
    </result-types>

    <default-action-ref name="index" />

    <global-results>
      <result name="json" type="json">
        <param name="root">screen</param>
        <param name="ignoreHierarchy">false</param>
        <param name="defaultDateFormat">yyyy-MM-dd HH:mm:ss</param>
      </result>
      <result name="failure">
        <param name="location">/failure</param>
      </result>
      <result name="unauth">
        <param name="location">/unauth</param>
      </result>
    </global-results>
    <global-exception-mappings>
      <exception-mapping exception="net.isger.brick.auth.AuthException" result="unauth" />
      <exception-mapping exception="java.lang.Throwable" result="failure" />
    </global-exception-mappings>

    <action name="**!*" class="net.isger.brick.struts.BrickAction">
      <result>
        <param name="location">${screen.see("@location", "{1}")}</param>
      </result>
      <result name="redirect" type="redirect">
        <param name="location">${screen.see("@location", "")}</param>
      </result>
      <result name="stream" type="stream">
        <param name="contentType">${screen.see("@contentType", "application/x-msdownload")}</param>
        <param name="inputName">inputStream</param>
        <param name="contentDisposition">attachment; filename=${screen.see("@name", "{2}")}</param>
        <param name="bufferSize">${screen.see("@buffer", "1024")}</param>
      </result>
    </action>

    <action name="">
      <result type="chain">index</result>
    </action>
  </package>
</struts>
